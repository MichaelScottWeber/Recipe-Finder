<!DOCTYPE html>
<html lang="en" dir="ltr">

  <head>
    <meta charset="utf-8">
    <title>Recipe Finder</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
  </head>

  <body>

    <div class="main-content">

      <h1>Recipe Finder</h1>
      <form class="" action="/results" method="GET">
        <input type="text" name="search" placeholder="pasta">
        <input type="text" name="ingredients" placeholder="garlic,penne,butter">
        <input type="submit" name="" value="Search">
      </form>

      <div class="grid-container">

          <% recipes["results"].forEach(function(recipe) { %>

            <div class="recipe-item">

              <h2>
                <a href="<%= recipe["href"] %>" target="_blank"><%= recipe["title"] %></a>
              </h2>

              <div class="grid-container">

                <div class="">
                  <img src="<%= recipe["thumbnail"] %>" alt="No Image Available">
                </div>

                <div class="">
                  <p><%= recipe["ingredients"] %></p>
                  <!-- <p>* See recipe for full ingredient list</p> -->
                </div>

              </div>

            </div>

          <% }); %>

      </div>

    </div>




  </body>
</html>
